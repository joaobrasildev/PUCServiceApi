{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
  ]
} 
